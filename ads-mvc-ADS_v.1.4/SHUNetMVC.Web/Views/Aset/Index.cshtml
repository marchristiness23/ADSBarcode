﻿@model Kataandi.Models.dto.AsetView

@{
    ViewData["Title"] = "Assets Index and Create";
}

<h2>Assets Index</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.newAset.AsetNo)</th>
            <th>@Html.DisplayNameFor(model => model.newAset.LineNo)</th>
            <th>@Html.DisplayNameFor(model => model.newAset.LocationId)</th>
            <th>@Html.DisplayNameFor(model => model.newAset.NomorAsetMySAP)</th>
            <th>@Html.DisplayNameFor(model => model.newAset.MySAPLineNo)</th>
            <th>@Html.DisplayNameFor(model => model.newAset.HarmoniNo)</th>
            <th>@Html.DisplayNameFor(model => model.newAset.SinasNo)</th>
            <th>@Html.DisplayNameFor(model => model.newAset.Deskripsi)</th>
            <th>@Html.DisplayNameFor(model => model.newAset.Merk)</th>
            <th>@Html.DisplayNameFor(model => model.newAset.KategoriAset)</th>
            <th>@Html.DisplayNameFor(model => model.newAset.TahunPerolehan)</th>
            <th>@Html.DisplayNameFor(model => model.newAset.Amount)</th>
            <th>@Html.DisplayNameFor(model => model.newAset.StatusPenggunaan)</th>
            <th>@Html.DisplayNameFor(model => model.newAset.Level)</th>
            <th>@Html.DisplayNameFor(model => model.newAset.KondisiAset)</th>
            <th>@Html.DisplayNameFor(model => model.newAset.LokasiAset)</th>
            <th>@Html.DisplayNameFor(model => model.newAset.PathFotoTagging)</th>
            <th>@Html.DisplayNameFor(model => model.newAset.PathFotoKeseluruhan)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.assets)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.AsetNo)</td>
                <td>@Html.DisplayFor(modelItem => item.LineNo)</td>
                <td>@Html.DisplayFor(modelItem => item.LocationId)</td>
                <td>@Html.DisplayFor(modelItem => item.NomorAsetMySAP)</td>
                <td>@Html.DisplayFor(modelItem => item.MySAPLineNo)</td>
                <td>@Html.DisplayFor(modelItem => item.HarmoniNo)</td>
                <td>@Html.DisplayFor(modelItem => item.SinasNo)</td>
                <td>@Html.DisplayFor(modelItem => item.Deskripsi)</td>
                <td>@Html.DisplayFor(modelItem => item.Merk)</td>
                <td>@Html.DisplayFor(modelItem => item.KategoriAset)</td>
                <td>@Html.DisplayFor(modelItem => item.TahunPerolehan)</td>
                <td>@Html.DisplayFor(modelItem => item.Amount)</td>
                <td>@Html.DisplayFor(modelItem => item.StatusPenggunaan)</td>
                <td>@Html.DisplayFor(modelItem => item.Level)</td>
                <td>@Html.DisplayFor(modelItem => item.KondisiAset)</td>
                <td>@Html.DisplayFor(modelItem => item.LokasiAset)</td>
                <td>@Html.DisplayFor(modelItem => item.PathFotoTagging)</td>
                <td>@Html.DisplayFor(modelItem => item.PathFotoKeseluruhan)</td>
                <td>
                    <a asp-action="Edit" asp-route-Aset_No="@item.AsetNo" class="btn btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-Aset_No="@item.AsetNo" class="btn btn-info">Details</a>
                    <a asp-action="Delete" asp-route-Aset_No="@item.AsetNo" class="btn btn-danger">
                        Delete
                    </a>
                    @* <form asp-action="Delete" asp-route-id="@item.Line_No" method="post" style="display:inline;">
                         @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">Delete</button>
                        </form> *@
                </td>
            </tr>
        }
    </tbody>
</table>

<hr />

