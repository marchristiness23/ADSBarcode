@model ASPNetMVC.Abstraction.Model.Entities.Employee

@{
    ViewBag.Title = "Create";
}



    <div class="modal-header">
        <div>
            Create Employee
        </div>

    </div>
    @using (Html.BeginForm())
    {
        <div class="modal-body">
            <div>

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="mb-3">
                    @Html.LabelFor(model => model.EmpName, htmlAttributes: new { @class = "form-label" })

                    @Html.EditorFor(model => model.EmpName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.EmpName, "", new { @class = "text-danger" })

                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.EmpPosition, htmlAttributes: new { @class = "form-label" })
                    @Html.EditorFor(model => model.EmpPosition, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.EmpPosition, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.DepartementId, htmlAttributes: new { @class = "form-label" })
                    @Html.DropDownListFor(model => model.DepartementId, ViewBag.Departements as SelectList, new { @class = "form-select" })
                    @Html.ValidationMessageFor(model => model.EmpPosition, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.Birthdate, htmlAttributes: new { @class = "form-label" })
                    @Html.TextBoxFor(model => model.Birthdate,new { @class = "form-control", type="date"})
                    @Html.ValidationMessageFor(model => model.Birthdate, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.OrgUnitId, htmlAttributes: new { @class = "form-label" })
                    @Html.EditorFor(model => model.OrgUnitId, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.OrgUnitId, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.Score, htmlAttributes: new { @class = "form-label" })
                    @Html.EditorFor(model => model.Score, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Score, "", new { @class = "text-danger" })
                </div>

                @*<div class="mb-3">
                    @Html.LabelFor(model => model.DepartementId, "DepartementId", htmlAttributes: new { @class = "form-label col-md-2" })


                    @Html.ValidationMessageFor(model => model.DepartementId, "", new { @class = "text-danger" })

                </div>*@
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-outline-danger" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary px-3" >Submit</button>
        </div>
    }


